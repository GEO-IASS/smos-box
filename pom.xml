            </dependency>
            <dependency>
                <groupId>org.esa.beam</groupId>
                <artifactId>blue-marble-worldmap</artifactId>
                <version>1.0.2</version>
            </dependency>
            <dependency>
                <groupId>org.esa.beam</groupId>
                <artifactId>beam-visat</artifactId>
