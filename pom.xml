            <!-- SMOS Libraries ############################################# -->

            <dependency>
                <groupId>org.esa.beam.smos</groupId>
                <artifactId>smos-dgg</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>org.esa.beam.smos</groupId>
                <artifactId>smos-lsmask</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>org.esa.beam.smos</groupId>
                <artifactId>smos-reader</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>org.esa.beam.smos</groupId>
