<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>smos-reader</symbolicName>
    <version>0.5</version>
    <name>SMOS Product Reader</name>
    <description>SMOS Product Reader</description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>
        Max Planck Str.2, 21502 Geesthacht (Germany)
    </contactAddress>
    <copyright>(C) 2009 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <changelog/>

    <dependency>
        <module>ceres-binio</module>
    </dependency>
    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>beam-visat</module>
        <optional>true</optional>
    </dependency>
    <dependency>
        <module>smos-dgg</module>
    </dependency>

    <categories>Reader,SMOS</categories>

    <extension point="beam-ui:actions">
        <action>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <id>importSmosProduct</id>
            <helpId/>
            <formatName>SMOS</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <text>Import SMOS Product...</text>
            <mnemonic/>
            <shortDescr>Import a SMOS data product or product subset.</shortDescr>
            <description>Import a SMOS data product or product subset.</description>
        </action>
    </extension>

</module>
